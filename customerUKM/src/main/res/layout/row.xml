<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBaris"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/idd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:text="id"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/status_kirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:padding="10dip"
        android:text="status_kirim"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/idd"
        android:gravity="right"
        android:textColor="#000000"
        android:padding="10dip"
        android:text="username"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/nama_lokasi"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/status_kirim"
        android:padding="10dip"
        android:text="nama_lokasi"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username"
        android:layout_toLeftOf="@+id/time"
        android:gravity="right"
        android:padding="10dip"
        android:textColor="#000000"
        android:text="date"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nama_lokasi"
        android:layout_toLeftOf="@+id/status_kirim"
        android:gravity="right"
        android:textColor="#000000"
        android:padding="10dip"
        android:text="time"
        android:textSize="15sp" />

</RelativeLayout>